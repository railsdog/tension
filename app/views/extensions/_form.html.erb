<div class="column span-12  first">
<p>
	<%= f.label :name, 'Extension\'s name'%><br/>
	<%= f.text_field :name, :size => 40, :class => 'text_field' %>
</p>

<p>
	<%= f.label :author_name, 'Author\'s name'%><br/>
	<%= f.text_field :author_name, :size => 40, :class => 'text_field' %>
</p>

<p>
	<%= f.label :summary, 'Summary'%><br/>
	<%= f.text_field :summary, :size => 40, :class => 'text_field' %>
</p>

<p>
	<%= f.label :website, 'Website' %><br/>
	<%= f.text_field :website, :size => 40, :class => 'text_field' %>
</p>

<p>
	<%= f.label :scm_location, 'SCM URL (GIT or SVN)'%><br/>
	<%= f.text_field :scm_location, :size => 40, :class => 'text_field' %>
</p>


<h3>Supported <%= APP_CONFIG['tension']['software_name'] %> Versions</h3>
  <p>
  <% @available_versions.each do |version| -%>
    <%= check_box_tag "extension[version_ids][]", version.id, @extension.versions.include?(version) %> <%= version.name %><br/>
  <% end -%>
  </p>

</div>

<h3>GitHub Info (If Applicable)</h3>
  <p>
  	<%= f.label :github_username, 'User Name'%><br/>
  	<%= f.text_field :github_username, :size => 40, :class => 'text_field' %>
  </p>
  <p>
  	<%= f.label :github_project, 'Project Name'%><br/>
  	<%= f.text_field :github_project, :size => 40, :class => 'text_field' %>
  </p>
</div>


<div class="column span-12  last">
  <p>
    <%= f.label :description, 'Description'%><br/>
    <%= f.text_area :description, :rows => 2 %><br/>
	<i>you can use Textile in this field</i>
  </p>

  <p>
  	<%= f.label :tag_list, 'Tags'%> (separated with commas)<br/>
  	<%= f.text_field :tag_list, :size => 60, :class => 'text_field' %>
  </p>
			
</div>
